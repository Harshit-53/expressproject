    <script src="js/main.js"></script>
    <script>
        
        const getCurrentDay = () =>{
            let weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[3] = "Wednesday";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";

            let currentTime = new Date();
            days = weekday[currentTime.getDay()];
            let day = document.getElementById('day')
            day.innerText = days;
        }
        getCurrentDay();
    </script>
    <script>
        const getCurrentMonth = ()=>{
            let weekdate = new Array(12);
            weekdate[0] = "Jan";
            weekdate[1] = "Feb";
            weekdate[2] = "Mar";
            weekdate[3] = "Apr";
            weekdate[4] = "May";
            weekdate[5] = "June";
            weekdate[6] = "July";
            weekdate[7] = "Aug";
            weekdate[8] = "Sept";
            weekdate[9] = "Oct";
            weekdate[10] = "Nov";
            weekdate[11] = "Dec";
            
            let currentDate = new Date();
            dates = weekdate[currentDate.getMonth()];
            let month = document.getElementById('Month')
            month.innerText = dates;

            let date = document.getElementById('dat');
            date.innerText = currentDate.getDate();
        }
        getCurrentMonth();
    </script>
</body>
